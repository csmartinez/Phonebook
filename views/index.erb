<h1><img src="http://www2.psd100.com/ppp/2013/11/0501/phone-icon-1105180731.png" alt="phone icon">My Phonebook <small>Add a contact here!</small></h1>

  <form action="/contacts" method="post">
    <label for="contactname">Full name:</label>
    <input id="contactname" placeholder="Keanna Bertin" name="contactname" type="text">
      <button name="submit" class="btn btn-danger">Add contact</button>
    </form>

    <h4>Here are your contacts! Click to view or add more numbers!</h4>

      <ul>
        <% @contacts.each() do |contact| %>
          <li><a href="/contacts/<%= contact.id() %>"> <%= contact.contactname() %> </a></li>
        <% end %>
      </ul>

  <form action="/clear"><button type="submit" class="btn btn-danger">Erase all contacts</button>
  </form>
